<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.buyData.BuyDataFragment">

<!--    Make it a tabview for "for me and for a friend"-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/networkIDimage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            app:shapeAppearanceOverlay="@style/round_profile_picture"
            app:srcCompat="@drawable/ic_mtn_colored"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/networkProviderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/network_provider"
            android:textColor="@color/black"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/networkIDimage"/>
        <EditText
            android:id="@+id/networkProviderEdt"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="45dp"
            android:paddingStart="10dp"
            android:background="@drawable/light_green_bg"
            android:text="MTN"
            android:textSize="14sp"
            android:textColor="@color/steel_gray"
            android:enabled="false"
            android:fontFamily="@font/satoshi_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/networkProviderTxt"/>

        <TextView
            android:id="@+id/phoneNumberTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/phone_number_txt"
            android:textColor="@color/black"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/networkProviderEdt"/>
        <EditText
            android:id="@+id/phoneNumberEdt"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="45dp"
            android:paddingStart="10dp"
            android:background="@drawable/light_green_bg"
            android:textSize="14sp"
            android:textColor="@color/steel_gray"
            android:fontFamily="@font/satoshi_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberTxt"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/forMeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/green"
            android:text="For me"
            android:textColor="@color/black"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberEdt"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dataPlanTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/data_plan_txt"
            android:textColor="@color/black"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forMeCheckBox"/>
        <Spinner
            android:id="@+id/dataPlanSpinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/light_green_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dataPlanTxt"/>

        <TextView
            android:id="@+id/amountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/amount_txt"
            android:textColor="@color/black"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dataPlanSpinner"/>
        <EditText
            android:id="@+id/amountEdt"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="45dp"
            android:paddingStart="10dp"
            android:enabled="false"
            android:background="@drawable/light_green_bg"
            android:text="500"
            android:textSize="14sp"
            android:textColor="@color/steel_gray"
            android:fontFamily="@font/satoshi_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amountTxt"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buyDataBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/green"
            android:text="@string/buy_now"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/satoshi_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amountEdt"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>